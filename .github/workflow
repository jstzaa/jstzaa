     name: Update Profile README
     on:
       schedule:
         - cron: '0 0 * * *' # Jalankan setiap hari pada pukul 00:00
       workflow_dispatch: # Jalankan secara manual
     jobs:
       update_readme:
         runs-on: ubuntu-latest
         steps:
           - uses: actions/checkout@v3
           - name: Update README
             run: |
               # Kode untuk memperbarui README.md Anda di sini.
               # Misalnya, jalankan skrip Python atau Node.js untuk mengambil data terbaru dan menulisnya ke README.md
               echo "Memperbarui README.md..."
               # Contoh:
               # python update_readme.py
               # git config --global user.email "your-email@example.com"
               # git config --global user.name "Your Name"
               # git add .
               # git commit -m "Update README.md"
               # git push
           - name: Commit changes
             uses: stefanzp/git-auto-commit-action@v4
             with:
               commit_message: "Update README"
               commit_user_name: GitHub Actions
               commit_user_email: actions@github.com
